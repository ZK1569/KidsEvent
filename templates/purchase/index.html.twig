{% extends "base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://bootswatch.com/5/lumen/bootstrap.min.css">
{% endblock %}

{% block title %}
    Mes commandes
{% endblock %}

{% block body %}

    <div class="container pt-5">
    
        <h1>Mes commandes</h1>

        {% for rubrique, messages in app.flashes %}
            <div class="alert alert-{{rubrique}}">
                {% for message in messages %}
                    <span>{{message}}</span>
                {% endfor %}
            </div>
        {% endfor %}

        <table class="table">
            <thead>
                <tr>
                    <th>Numero</th>
                    <th>Adress</th>
                    <th>Date de commande</th>
                    <th>Date de l'anniversaire</th>
                    <th>Themes</th>
                    <th>Total</th>
                </tr>
            </thead>    
            <tbody>
                {% for p in purchases %}
                    <tr>
                        <td>{{p.id}}</td>
                        <td>{{p.address}} <br>{{p.postalCode}}, {{p.city}}</td>
                        <td>{{p.purchasedAt | date('d/m/Y')}}</td>
                        <td>{{p.reserveFor | date('d/m/Y H:i')}}</td>
                        <td>
                            <ul>
                                {% for item in p.purchaseItems %}
                                    <li>{{item.productName}} {{item.Total}} €</li>
                                {% endfor %}
                            </ul>
                        </td>
                        <td>{{p.total}} €</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}